<h1 class="text-center">Login!</h1>

<%= form_tag '/login', class: 'new_session' do %>

  <div class="row">
    <div class="col-md-offset-3 col-md-6 user-form">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-6 user-form">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-6 user-form text-center">
      <%= submit_tag "Login", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>

<div class="col-md-offset-3 col-md-6 text-center">
  or
</div>

<div class="col-md-offset-3 col-md-6 text-center">
  <%= link_to 'Login with Facebook', facebook_sign_in_path, class: 'btn btn-danger' %>
</div>