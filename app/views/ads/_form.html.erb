<%= form_for ad, :html => {:class => 'form-horizontal'}, remote: true do |f| %>

  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      <p class="text-left ad-form-title">
        Ad Details
      </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6">
      <%= f.select :category, options_for_select(@categories, selected: f.object.category), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :condition, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-3">
          <%= f.radio_button :condition, "Used", checked: true %>
          <%= f.label :condition_used, "Used" %>
        </div>
        <div class="col-md-3">
          <%= f.radio_button :condition, "New" %>
          <%= f.label :condition_new, "New" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ad_title, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6 ad_title_div">
      <%= f.text_field :ad_title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6 description_div">
      <%= f.text_area :description, class: 'form-control', rows: '8', placeholder: 'Include details such as the Brand, Preference to do Cash on Delivery, Payment & Postage Info or Warranty and Other T&C.' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6 price_div">
      <div class="input-group">
        <div class="input-group-addon">
          RM
        </div>
        <%= f.number_field :price, class: 'form-control', min: 0, step: 0.01, placeholder: '0.00' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :item_location, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6">
      <%= f.select :item_location, options_for_select(@locations, selected: f.object.item_location), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :item_area, "Area", class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6">
      <%= f.select :item_area, "", {}, class: 'form-control' %>
    </div>
  </div>

  <hr style="border: 1px solid #e6e6e6">

  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      <p class="text-left ad-form-title">
        Photos
      </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.file_field :photos, multiple: true, class: 'col-md-offset-2' %>
  </div>

  <hr style="border: 1px solid #e6e6e6">

  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      <p class="text-left ad-form-title">
        My Details
      </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :seller_type, "I am a", class: 'col-md-offset-2 col-md-2 text-left' %>

    <div class="col-md-6">
      <%= f.radio_button :seller_type, "Private Seller", checked: true %>
      <%= f.label :seller_type_private_seller, "Private Seller" %>
    </div>

    <div class="col-md-offset-4 col-md-6">
      <%= f.radio_button :seller_type, "Professional Seller" %>
      <%= f.label :seller_type_professional_seller, "Professional Seller" %>
    </div>

    <div class="col-md-offset-4 col-md-6">
      <%= f.radio_button :seller_type, "Company" %>
      <%= f.label :seller_type_company, "Company" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: 'col-md-offset-2 col-md-2 text-left' %>
    <div class="col-md-6 phone_number_div">
      <%= f.number_field :phone_number, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>